{
    "name": "advans/plg-j2commerce-productcompare",
    "description": "Product comparison plugin for J2Commerce",
    "type": "joomla-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Advans\\Plugin\\J2Commerce\\ProductCompare\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Advans\\Plugin\\J2Commerce\\ProductCompare\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "build": "./build.sh",
        "build:full": [
            "@test",
            "@build"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
