{
    "name": "advans/plg-system-j2commerce-2fa",
    "description": "Fixes 2FA login issues with J2Commerce",
    "type": "joomla-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Advans IT Solutions GmbH",
            "email": "support@advans.ch",
            "homepage": "https://advans.ch"
        }
    ],
    "require": {
        "php": ">=8.1",
        "joomla/cms": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Advans\\Plugin\\System\\J2Commerce2fa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Advans\\Plugin\\System\\J2Commerce2fa\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs": "phpcs --standard=PSR12 src/",
        "cs:fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/ --level=8",
        "build": "./build.sh",
        "build:full": [
            "@test",
            "@cs",
            "@stan",
            "@build"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
