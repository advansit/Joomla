<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
    <autoloadLanguage>true</autoloadLanguage>
    <scriptfile>script.php</scriptfile>
    <name>PLG_SYSTEM_J2COMMERCE_2FA</name>
    <element>j2commerce_2fa</element>
    <author>Advans IT Solutions GmbH</author>
    <creationDate>December 2025</creationDate>
    <copyright>Copyright (C) 2025 Advans IT Solutions GmbH. All rights reserved.</copyright>
    <license>Proprietary</license>
    <authorEmail></authorEmail>
    <authorUrl>https://advans.ch</authorUrl>
    <version>1.0.0</version>
    <description>PLG_SYSTEM_J2COMMERCE_2FA_XML_DESCRIPTION</description>
    
    <targetplatform name="joomla" version="(4\.[0-9]|5\.[0-9]|6\.[0-9])" />
    
    
    <files>
        <folder>language</folder>
    </files>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="enabled"
                    type="radio"
                    label="PLG_SYSTEM_J2COMMERCE_2FA_ENABLED_LABEL"
                    description="PLG_SYSTEM_J2COMMERCE_2FA_ENABLED_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="debug"
                    type="radio"
                    label="PLG_SYSTEM_J2COMMERCE_2FA_DEBUG_LABEL"
                    description="PLG_SYSTEM_J2COMMERCE_2FA_DEBUG_DESC"
                    default="0"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="preserve_cart"
                    type="radio"
                    label="PLG_SYSTEM_J2COMMERCE_2FA_PRESERVE_CART_LABEL"
                    description="PLG_SYSTEM_J2COMMERCE_2FA_PRESERVE_CART_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                    name="preserve_guest_cart"
                    type="radio"
                    label="PLG_SYSTEM_J2COMMERCE_2FA_PRESERVE_GUEST_CART_LABEL"
                    description="PLG_SYSTEM_J2COMMERCE_2FA_PRESERVE_GUEST_CART_DESC"
                    default="1"
                    class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                
                <field
                    name="session_timeout"
                    type="number"
                    label="PLG_SYSTEM_J2COMMERCE_2FA_SESSION_TIMEOUT_LABEL"
                    description="PLG_SYSTEM_J2COMMERCE_2FA_SESSION_TIMEOUT_DESC"
                    default="3600"
                    min="300"
                    max="86400"
                    step="60"
                />
            </fieldset>
        </fields>
    </config>
    
    <updateservers>
        <server type="extension" priority="1" name="J2Commerce 2FA">
            https://advans.ch/updates/plg_system_j2commerce_2fa.xml
        </server>
    </updateservers>
</extension>
