<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="ajax" method="upgrade">
    <name>PLG_AJAX_JOOMLAAJAXFORMS</name>
    <author>Advans IT Solutions GmbH</author>
    <authorEmail>info@advans.ch</authorEmail>
    <authorUrl>https://advans.ch</authorUrl>
    <copyright>Copyright (C) 2025-2026 Advans IT Solutions GmbH. All rights reserved.</copyright>
    <license>Proprietary License</license>
    <creationDate>2026-02</creationDate>
    <version>1.3.5</version>
    <description>PLG_AJAX_JOOMLAAJAXFORMS_DESC</description>
    <scriptfile>script.php</scriptfile>
    <namespace path="src">Advans\Plugin\Ajax\JoomlaAjaxForms</namespace>

    <files>
        <folder plugin="joomlaajaxforms">services</folder>
        <folder>src</folder>
        <folder>language</folder>
    </files>

    <media destination="plg_ajax_joomlaajaxforms" folder="media">
        <folder>js</folder>
    </media>

    <languages>
        <language tag="en-GB">language/en-GB/plg_ajax_joomlaajaxforms.ini</language>
        <language tag="en-GB">language/en-GB/plg_ajax_joomlaajaxforms.sys.ini</language>
        <language tag="de-DE">language/de-DE/plg_ajax_joomlaajaxforms.ini</language>
        <language tag="de-DE">language/de-DE/plg_ajax_joomlaajaxforms.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="enable_login"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_LOGIN"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_LOGIN_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="enable_registration"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_REGISTRATION"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_REGISTRATION_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="enable_reset"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_RESET"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_RESET_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="enable_remind"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_REMIND"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_REMIND_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="enable_profile"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_PROFILE"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_PROFILE_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                    name="enable_j2store_cart"
                    type="radio"
                    label="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_J2STORE_CART"
                    description="PLG_AJAX_JOOMLAAJAXFORMS_ENABLE_J2STORE_CART_DESC"
                    default="1"
                    class="btn-group btn-group-yesno">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" priority="1" name="Joomla Ajax Forms">
            https://raw.githubusercontent.com/advansit/Joomla/main/plg_ajax_joomlaajaxforms/updates/update.xml
        </server>
    </updateservers>
</extension>
